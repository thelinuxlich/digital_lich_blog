---
export interface Props {
  title: string;
  date: string;
  hero: string;
  youtube: string;
}

const { title, date, hero, youtube } = Astro.props;
---

<article class="max-w-5xl px-3 mx-auto">
  <header class="max-w-3xl mx-auto text-center content">
    <h1>{title}</h1>
  </header>

  <!-- Image -->
  {hero && <img class="mx-auto rounded-xl" style="min-width: 80%;" loading="lazy" src={hero} alt={title} />}

  <!-- YouTube Video -->
  {youtube && <div class="mt-6 embed-responsive aspect-ratio-16/9 lg:mt-12">
    <iframe width="700" height="500" class="embed-responsive-item"
      src={`https://www.youtube.com/embed/${youtube}`} frameborder="0"
      allow="accelerometer; autoplay; encrypted-media; gyroscope;" allowfullscreen></iframe>
  </div>}

  <!-- Content -->
  <section class="max-w-3xl py-6 mx-auto lg:py-12 content">
    <slot />
  </section>

  <!-- Comments -->
  <div class="giscus"></div>
  <script src="https://giscus.app/client.js"
        data-repo="thelinuxlich/digital_lich_blog"
        data-repo-id="R_kgDOKE-FgA"
        data-category="General"
        data-category-id="DIC_kwDOKE-FgM4CYdzg"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="preferred_color_scheme"
        data-lang="pt"
        data-loading="lazy"
        crossorigin="anonymous"
        async>
  </script>
</article>
